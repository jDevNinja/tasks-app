<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <servlet>
        <servlet-name>greeting-servlet</servlet-name>
        <servlet-class>ru.practicum.tasks.GreetingServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>tasks-servlet</servlet-name>
        <servlet-class>ru.practicum.tasks.TasksServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>greeting-servlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>tasks-servlet</servlet-name>
        <url-pattern>/tasks/*</url-pattern>
    </servlet-mapping>

</web-app>
